html
    head
        style. 
            include stylesheet.css
    title Search
    body 
        include ../partials/header
    div#main
        h1 Search Page		
    form#searchButton(action="/search", method="post")
        div#searchPageTitle
            h3.searchTitle Search
        div#search
            p.label Title:      
                input.title(type="text" placeholder="Title" name= "title")
            
            p.label Genre:         
                input.genre(type="text" placeholder="Genre" name="genre")
            
            p.label Actor Name: 
                input.actorName(type="text" placeholder="Actor Name" name="actorName") 
        
        
            input.enterSearch(type="submit" name="Search" placeholder="Search" value="Search")

    div#movieResults
        h1.resultsHeader Results (#{searchResults.length} results): 
        ol
            each movie in searchResults
                li.movieLI 
                    a(href="/movie?id="+movie._id) #{movie.title} (#{movie.genre}) (#{movie.runtime})
                    br
        form#nextButton(action="/search/next", method="post")
            input.next(type="submit" name="next" placeholder="next" value="next")
        form#prevButton(action="/search/prev", method="post")
            input.next(type="submit" name="prev" placeholder="prev" value="prev")

